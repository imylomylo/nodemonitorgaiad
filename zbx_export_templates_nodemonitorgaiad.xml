<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-04-02T05:55:13Z</date>
    <groups>
        <group>
            <name>Templates/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template App Cosmos Gaiad</template>
            <name>Template App Cosmos Gaiad</name>
            <description>Cosmos Node</description>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Cosmos Gaiad</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>nodemonitor npeers</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>log[{$LOGFILE},&quot;npeers=([0-9\.]*)&quot;,,,skip,\1,]</key>
                    <delay>2s</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>LOG</value_type>
                    <applications>
                        <application>
                            <name>Cosmos Gaiad</name>
                        </application>
                    </applications>
                    <logtimefmt>yyyy-MM-ddxhh:mm:ss+xx:xx</logtimefmt>
                    <triggers>
                        <trigger>
                            <expression>{last()}&lt;={$THRSHLDPEERS}</expression>
                            <name>{$NODEID} npeers &lt;= {$THRSHLDPEERS}</name>
                            <priority>WARNING</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>nodemonitor npersistentpeersoff</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>log[{$LOGFILE},&quot;npersistentpeersoff=([0-9\.]*)&quot;,,,skip,\1,]</key>
                    <delay>2s</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>LOG</value_type>
                    <applications>
                        <application>
                            <name>Cosmos Gaiad</name>
                        </application>
                    </applications>
                    <logtimefmt>yyyy-MM-ddxhh:mm:ss+xx:xx</logtimefmt>
                    <triggers>
                        <trigger>
                            <expression>{last()}&gt;={$THRSHLDPERSISTENTPEERS}</expression>
                            <name>{$NODEID} npersistentpeersoff &gt;= {$THRSHLDPERSISTENTPEERS}</name>
                            <priority>WARNING</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>nodemonitor %precommits</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>log[{$LOGFILE},&quot;pctprecommits=([0-9\.]*)&quot;,,,skip,\1,]</key>
                    <delay>2s</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>LOG</value_type>
                    <applications>
                        <application>
                            <name>Cosmos Gaiad</name>
                        </application>
                    </applications>
                    <logtimefmt>yyyy-MM-ddxhh:mm:ss+xx:xx</logtimefmt>
                    <triggers>
                        <trigger>
                            <expression>{last()}&lt;=0.5</expression>
                            <name>{$NODEID} %precommits &lt;= 0.5</name>
                            <priority>HIGH</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                        <trigger>
                            <expression>{last()}&lt;0.95 and {last()}&gt;0.5</expression>
                            <name>{$NODEID} 0.95 &gt; %precommits &gt; 0.5</name>
                            <priority>WARNING</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                        <trigger>
                            <expression>{last()}&lt;1.0 and {last()}&gt;0.95</expression>
                            <name>{$NODEID} 1.0 &gt; %precommits &gt;= 0.95</name>
                            <priority>INFO</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>nodemonitor status</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>log[{$LOGFILE},&quot;status=(\w*)&quot;,,,skip,\1,]</key>
                    <delay>2s</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>LOG</value_type>
                    <description>scriptstarted | error | catchingup | synced&#13;
&#13;
error can have various causes, typically the gaiad process is down.</description>
                    <applications>
                        <application>
                            <name>Cosmos Gaiad</name>
                        </application>
                    </applications>
                    <logtimefmt>yyyy-MM-ddxhh:mm:ss+xx:xx</logtimefmt>
                    <triggers>
                        <trigger>
                            <expression>{str(catchingup)}=1</expression>
                            <name>{$NODEID} status: catchingup</name>
                            <priority>INFO</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                        <trigger>
                            <expression>{str(error)}=1</expression>
                            <name>{$NODEID} status: error</name>
                            <priority>HIGH</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                        <trigger>
                            <expression>{str(scriptstarted)}=1</expression>
                            <name>{$NODEID} status: script started</name>
                            <priority>INFO</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>nodemonitor tfromnow</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>log[{$LOGFILE},&quot;tfromnow=([0-9\.]*)&quot;,,,skip,\1,]</key>
                    <delay>2s</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>LOG</value_type>
                    <applications>
                        <application>
                            <name>Cosmos Gaiad</name>
                        </application>
                    </applications>
                    <logtimefmt>yyyy-MM-ddxhh:mm:ss+xx:xx</logtimefmt>
                    <triggers>
                        <trigger>
                            <expression>{last()}&gt;{$TLASTBLOCKFROMNOW}</expression>
                            <name>{$NODEID} tfromnow &gt; {$TLASTBLOCKFROMNOW}</name>
                            <priority>WARNING</priority>
                            <description>the node is catching up</description>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$LOGFILE}</macro>
                    <value>/home/kava2/nodemonitorgaiad/nodemonitor-kava2.log</value>
                    <description>Location of the nodemonitor log file on the host, example: /home/user/nodemonitor-user.log</description>
                </macro>
                <macro>
                    <macro>{$NODEID}</macro>
                    <value>Kava</value>
                    <description>Identifier for the node on the server (useful if more than one are hosted).</description>
                </macro>
                <macro>
                    <macro>{$THRSHLDPEERS}</macro>
                    <value>2</value>
                    <description>This is the default threshold value for min. connected peers. In future versions of the nodemonitor script we intend to derive a percentage figure from node configuration data.</description>
                </macro>
                <macro>
                    <macro>{$THRSHLDPERSISTENTPEERS}</macro>
                    <value>1</value>
                    <description>Default threshold value for max disconnected persistent peers.</description>
                </macro>
                <macro>
                    <macro>{$TLASTBLOCKFROMNOW}</macro>
                    <value>300</value>
                    <description>Time in seconds from the blockheight in the logfile that triggers a warning (chain halt detection).</description>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>
